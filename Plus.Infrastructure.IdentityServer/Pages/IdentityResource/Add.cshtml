@page
@model Plus.Infrastructure.IdentityServer.Pages.IdentityResource.AddModel
@{
    ViewData["Title"] = "Add";
}

<h1>Add IdentiyResource</h1>
<hr />
<form method="post" enctype="multipart/form-data">
    <dl class="dl-horizontal">
        <dd><label asp-for="Model.Name"></label></dd>
        <dt>
            <input asp-for="Model.Name" class="form-control" />
            <span asp-validation-for="Model.Name"></span>
        </dt>
        <dd><label asp-for="Model.DisplayName"></label></dd>
        <dt>
            <input asp-for="Model.DisplayName" class="form-control" />
            <span asp-validation-for="Model.DisplayName"></span>
        </dt>
        <dd><label asp-for="Model.Description"></label></dd>
        <dt>
            <textarea asp-for="Model.Description" class="form-control"></textarea>
            <span asp-validation-for="Model.Description"></span>
        </dt>
        <dd><label asp-for="Model.Required"></label></dd>
        <dt>
            <checkbox asp-for="Model.Required" class="form-control" />
            <span asp-validation-for="Model.Required"></span>
        </dt>
        <dd><label asp-for="Model.Emphasize"></label></dd>
        <dt>
            <checkbox asp-for="Model.Emphasize" class="form-control" />
            <span asp-validation-for="Model.Emphasize"></span>
        </dt>
        <dd><label asp-for="Model.ShowInDiscoveryDocument"></label></dd>
        <dt>
            <checkbox asp-for="Model.ShowInDiscoveryDocument" class="form-control" />
            <span asp-validation-for="Model.ShowInDiscoveryDocument"></span>
        </dt>
        <dd><label asp-for="Model.Created"></label></dd>
        <dt>
            <input asp-for="Model.Created" type="datetime" class="form-control" />
            <span asp-validation-for="Model.Created"></span>
        </dt>
        <dd><label asp-for="Model.Updated"></label></dd>
        <dt>
            <input asp-for="Model.Updated" type="datetime" class="form-control" />
            <span asp-validation-for="Model.Updated"></span>
        </dt>

        <dd></dd>
        <dt>
            <input type="submit" class="btn btn-success" value="Submit" />
        </dt>
    </dl>



</form>
