@page
@model Plus.Infrastructure.IdentityServer.Pages.Resource.AddScopeModel
@{
    ViewData["Title"] = "Add";
}

<h1>Add Scope</h1>
<hr />
<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Scope.ApiResourceId" />
    <dl class="dl-horizontal">
        <dd><label asp-for="Scope.Scope"></label></dd>
        <dt>
            <input asp-for="Scope.Scope" class="form-control" />
            <span asp-validation-for="Scope.Scope"></span>
        </dt>
        <dd></dd>
        <dt>
            <input type="submit" class="btn btn-success" value="Add" />
        </dt>
    </dl>



</form>
