@model Plus.Infrastructure.IdentityServer.Models.ApiResource.AddEditApiResourceViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create ApiResource</h1>
<hr />

<partial name="_ValidationSummary" />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DisplayName" class="control-label"></label>
                <input asp-for="DisplayName" class="form-control" />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input asp-for="Enabled" type="checkbox" class="form-check-input" />
                <label asp-for="Enabled" class="form-check-label"></label>
                <span asp-validation-for="Enabled" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input asp-for="NonEditable" type="checkbox" class="form-check-input" />
                <label asp-for="NonEditable" class="form-check-label"></label>
                <span asp-validation-for="NonEditable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Created" class="control-label"></label>
                <input asp-for="Created" type="date" class="form-control" />
                <span asp-validation-for="Created" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Updated" class="control-label"></label>
                <input asp-for="Updated" type="date" class="form-control" />
                <span asp-validation-for="Updated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastAccessed" class="control-label"></label>
                <input asp-for="LastAccessed" type="date" class="form-control" />
                <span asp-validation-for="LastAccessed" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Scopes" class="control-label"></label>
                <select multiple="multiple" asp-for="Scopes" class="form-control"></select>
                <span asp-validation-for="Scopes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Secrets" class="control-label"></label>
                <select multiple="multiple" asp-for="Secrets" class="form-control"></select>
                <span asp-validation-for="Secrets" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserClaims" class="control-label"></label>
                <select multiple="multiple" asp-for="UserClaims" class="form-control"></select>
                <span asp-validation-for="UserClaims" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Properties" class="control-label"></label>
                <select multiple="multiple" asp-for="Properties" class="form-control"></select>
                <span asp-validation-for="Properties" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}


