@model IEnumerable<Plus.Infrastructure.IdentityServer.Models.ScopeItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Scope List</h1>
<hr />

<div class="modal fade" tabindex="-1" role="dialog" id="scopeList">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Scope List</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-6">
                        <table class="table table-hover data-table small" data-index="false">
                            <thead>
                                <tr>
                                    <th>Scope</th>
                                    <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.Scope
                                        </td>

                                        <td class="text-center action-cell">
                                            @*<div id="PlaceHolderHere"></div>
                                            <span>
                                                <button type="button" class="btn btn-primary"   data-toggle="ajax-modal" data-target="#addScope"
                                                        data-url="@Url.Action("AddScope")">
                                                    Add
                                                </button>
                                            </span>*@
                                            <a class="action-link hover-primary" asp-action="AddScope"
                                                asp-controller="ApiResource">Add</a>
                                            <span></span>
                                            <a class="action-link hover-primary" asp-action="Delete"
                                               asp-controller="ApiResource"
                                               asp-route-id="@item.Id">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


@section Scripts {

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/modal.js"></script>


}